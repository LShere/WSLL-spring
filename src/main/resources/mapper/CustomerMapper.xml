<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="spring.mapper">
    <select id="findCustomer"
            resultType="customer">
		select * from customers
	</select>
    <update id="update" parameterType="customer">
		update customers set customerName =#{customerName} where customerNumber = #{customerNumber}
	</update>
    <select id="select-if" parameterType="customer" resultType="customer">
        select * from customers
        <where>
            <if test="customerNumber !=null and customerNumber !=''">
                and customerNumber like concat('%',#{customerNumber}, '%')
            </if>
            <if test="customerName !=null and customerName !=''">
                and customerName= #{customerName}
            </if>
        </where>
    </select>
</mapper>
