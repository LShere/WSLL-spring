<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="spring.dao.UserDao">
    <resultMap id="user" type="spring.pojo.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
    </resultMap>
    <select id="findUser" resultMap="user">
		select * from user
	</select>
    <select id="findUserById" resultMap="user">
		select * from user where id=#{id}
	</select>
    <select id="findUserByName" resultMap="user" parameterType="String">
		select * from user where username=#{username}
	</select>
</mapper>
